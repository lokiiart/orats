<p id="notice"><%= notice %></p>

<h1>Virtual Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Product count</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @virtual_orders.each do |virtual_order| %>
      <tr>
        <td><%= virtual_order.name %></td>
        <td><%= virtual_order.phone %></td>
        <td><%= virtual_order.address %></td>
        <td><%= virtual_order.product_count %></td>
        <td><%= virtual_order.payment %></td>
        <td><%= link_to 'Show', virtual_order %></td>
        <td><%= link_to 'Edit', edit_virtual_order_path(virtual_order) %></td>
        <td><%= link_to 'Destroy', virtual_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Virtual Order', new_virtual_order_path %>
